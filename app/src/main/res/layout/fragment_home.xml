<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-720dp"
        android:layout_marginEnd="8dp"
        android:textSize="20sp"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-400dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textColor="@color/md_theme_onBackground"
        android:fontFamily="@font/manjaribold"
        app:fontFamily="@font/manjaribold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-320dp"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_humidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-250dp"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/text_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="90dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="postalAddress"
        android:paddingStart="10dp"
        android:inputType="textPostalAddress" />

    <Button
        android:id="@+id/search"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:paddingStart="15dp"

        app:layout_constraintStart_toEndOf="@id/text_search"
        app:layout_constraintTop_toTopOf="@id/text_search"
        android:drawableLeft="@drawable/go"/>

    <View
        android:id="@+id/text_hourlyhome"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_hourly"
        android:fontFamily="@font/manjaribold"
        android:textAlignment="center"
        android:textColor="#60acbd"
        android:textSize="50sp"
        app:fontFamily="@font/manjaribold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.647" />

    <TextView
        android:id="@+id/text_now"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="20sp"
        android:text="Now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/md_theme_onPrimary"
        android:background="@drawable/background_nowtext"
        app:layout_constraintStart_toStartOf="@id/text_hourlyhome"
        app:layout_constraintTop_toTopOf="@id/text_hourlyhome" />

    <TextView
        android:id="@+id/text_nowtemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="xxº"
        android:textColor="@color/md_theme_onBackground"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/text_hourlyhome"
        app:layout_constraintTop_toTopOf="@id/text_hourlyhome" />
    <TextView
        android:id="@+id/text_onehour"
        android:textSize="20dp"
        android:text="1 hr"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/md_theme_onBackground"
        app:layout_constraintStart_toStartOf="@id/text_hourlyhome"
        app:layout_constraintTop_toTopOf="@id/text_hourlyhome" />
    <TextView
        android:id="@+id/text_onehourtemp"
        android:textSize="25dp"
        android:text="xxº"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="80dp"
        android:textColor="@color/md_theme_onBackground"
        app:layout_constraintStart_toStartOf="@id/text_hourlyhome"
        app:layout_constraintTop_toTopOf="@id/text_hourlyhome" />
    <TextView
        android:id="@+id/text_twohour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="40dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="2 hrs"
        android:textColor="@color/md_theme_onBackground"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/text_hourlyhome"
        app:layout_constraintTop_toTopOf="@id/text_hourlyhome" />
    <TextView
        android:id="@+id/text_twohourtemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:paddingStart="10dp"
        android:paddingEnd="40dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="xxº"
        android:textColor="@color/md_theme_onBackground"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/text_twohour"
        app:layout_constraintTop_toTopOf="@id/text_hourlyhome" />
</androidx.constraintlayout.widget.ConstraintLayout>